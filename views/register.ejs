  <%- include('partials/header') %>

  <div class="mb-3 container-sm mt-3">
    <div class="row">
      <div class="col" >
        <h1 class="">Hostel Allocating System</h1>
      </div>
      <div class="col">
        <img class="w-50 float-end" src="img/Cover_PEC.png" alt="">
      </div>
    </div>
  </div>

  <div class="mb-3 container-sm w-25 mt-3">

    <!-- Makes POST request to /register route -->
    <form action="/register" method="POST">
      <h1>Register</h1>
      <div <%= message %> class="alert alert-warning my-4" role="alert">
        Password and confrim password should match.
      </div>
      <div <%= exist %> class="alert alert-warning my-4" role="alert">
        User already exist<br>
        <button class="btn btn-secondary student-header">Login here<a href="/login"></a></button>
      </div>
      <div class="">
        <label class="form-label" for="fname">Full name</label>
        <input  id="fname" type="text" class="form-control" name="username" required>
      </div>
      <div class="">
        <label class="form-label" for="sid">SID</label>
        <input id="sid" type="number" class="form-control" name="sid" required>
      </div>
      <div>
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" id="email" name="email" required>
      </div>
      <div>
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" required>
      </div>
      <div>
        <label class="form-label" for="cpassword">Confrim Password</label>
        <input class="form-control" type="cpassword" id="cpassword" name="cpassword" required>
      </div>
    
      <button type="submit" class="btn btn-primary my-2 mx-auto">Register</button>
      <button class="btn btn-warning student-header"><a href="/">Login</a></button>
    </form>
  </div>
  <span >*For students only.</span>
  <%- include('partials/footer') %>