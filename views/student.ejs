<%- include('partials/header') %>
    
<div class="student-header container-sm my-4">
    <div class="row">
        <div class="col"><h2>Student Profile</h2></div>
        <div class="col"><button class="btn btn-danger float-end">
        <a href="/">Logout</a></button>
        </div>
    </div>
</div>
<div class="container-sm">
    <div class="row">
        <div class="w-50 col">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Name:</th>
                    <td><%= name %></td>
                </tr>
                <tr>
                    <th>SID:</th>
                    <td><%= sid %></td>
                </tr>
                <tr>
                    <th>Branch:</th>
                    <td><%= branch %></td>
                </tr>
                <tr>
                    <th>Hostel:</th>
                    <td><%= hostel %></td>
                </tr>
                <tr>
                    <th>Room:</th>
                    <td><%= room %></td>
                </tr>
            </tbody>
            </table>
        </div>
        <div class="col">
            <div class="float-end">
                <form action="/student" method="post" id="complaint-form">
                <h3>Lodge a complaint</h3>
                <div class=" row form-floating">
                    <textarea class="form-control" name="complaint" cols="30" placeholder="Leave a comment here" id="complaint" style="height: 100px"></textarea>
                    <label for="complaint">Complaint</label>
                </div>
                <div class="">
                    <button type="button" class="btn btn-info my-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Submit
                  </button>
                </div>
                
                  
                  <!-- Modal -->
                  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm?</h1>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          Are sure want to register a complaint?
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                          <button type="submit" class="btn btn-primary">Confirm</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </form>
            </div>
            
        </div>
        <div class="mt-5">
            <table class="table table-success table-striped">
                <tr>
                    <th>Warden:</th>
                    <th>Gaurd:</th>
                    <th>Dean:</th>
                </tr>
                <tr>
                    <td>9876-XXXXXX</td>
                    <td>6789-XXXXXX</td>
                    <td>0172-XXXXXX</td>
                </tr>
            </table>
        </div>
    </div>
    
</div>

<%- include('partials/footer') %>